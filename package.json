{
	"name": "localeops",
	"version": "0.1.0",
	"module": "src/server/index.ts",
	"scripts": {
		"dev": "bun run --watch src/server/index.ts",
		"commit": "cz",
		"check": "biome check",
		"fix": "biome check --fix",
		"build": "bun build --compile --minify --production --sourcemap src/server/index.ts --outfile dist/localeops",
		"release": "semantic-release"
	},
	"type": "module",
	"private": true,
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/bun": "latest",
		"@types/lodash": "^4.17.20",
		"commitizen": "^4.3.1",
		"conventional-changelog-conventionalcommits": "^8.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"lefthook": "^1.13.6",
		"semantic-release": "^25.0.2"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"dependencies": {
		"@octokit/rest": "^22.0.1",
		"@sinclair/typebox": "^0.34.41",
		"lodash": "^4.17.21"
	}
}
