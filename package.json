{
	"name": "@localeops/localeops",
	"version": "0.3.8",
	"description": "A flexible localization operations toolkit",
	"keywords": [
		"localization",
		"i18n",
		"l10n",
		"translation",
		"locale"
	],
	"license": "Apache-2.0",
	"author": "Digital Shed Oy",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/localeops/localeops.git"
	},
	"bugs": {
		"url": "https://github.com/localeops/localeops/issues"
	},
	"homepage": "https://github.com/localeops/localeops#readme",
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"localeops": "dist/localeops"
	},
	"files": [
		"dist/localeops",
		"README.md",
		"LICENSE",
		"CHANGELOG.md"
	],
	"scripts": {
		"dev": "bun run --watch src/server/index.ts",
		"commit": "cz",
		"check": "biome check",
		"fix": "biome check --fix",
		"build": "bun build --compile --minify --production --sourcemap src/index.ts --outfile dist/localeops",
		"release": "semantic-release"
	},
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/exec": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/bun": "latest",
		"@types/lodash": "^4.17.20",
		"@types/yargs": "^17.0.35",
		"commitizen": "^4.3.1",
		"conventional-changelog-conventionalcommits": "^8.0.0",
		"cz-customizable": "^7.5.1",
		"lefthook": "^1.13.6",
		"semantic-release": "^25.0.2"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-customizable"
		}
	},
	"dependencies": {
		"@octokit/rest": "^22.0.1",
		"@sinclair/typebox": "^0.34.41",
		"lodash": "^4.17.21",
		"yargs": "^18.0.0"
	}
}
